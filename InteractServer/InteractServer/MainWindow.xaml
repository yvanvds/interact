<Window x:Class="InteractServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ad="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:adcustom="clr-namespace:Xceed.Wpf.AvalonDock.Themes"
        xmlns:local="clr-namespace:InteractServer"
        Title="Interact Server" WindowState="Maximized"
        Background="#2a2a2a"
        Closing="Window_Closing">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Menu Grid.Row="0" Background="#1a1a1a" Foreground="White">

      <MenuItem Header="_Application" Template="{DynamicResource DarkMenuItem}">
        <MenuItem Header="_Options" Click="ProgramOptions_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageOptions}"/>
          </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="_Exit" Click="Exit_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageExit}"/>
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>

      <MenuItem Header="_Project" Template="{DynamicResource DarkMenuItem}">
        <MenuItem Header="_New" Click="ButtonNewProject_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageNew}"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Open" Click="ButtonLoadProject_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageOpen}"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Save" Click="ButtonSaveProject_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageSaveAll}"/>
          </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="_Start" Click="ButtonStartProject_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
          <Image Source="{StaticResource ImageRun}"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Stop" Click="ButtonStopProject_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageStop}"/>
          </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="_Project Options" Click="ButtonConfigProject_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageOptions}"/>
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>

      <MenuItem Header="_Window" Template="{DynamicResource DarkMenuItem}">
        <MenuItem Header="_Client Overview" Click="ButtonClientsView_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImagePhone}"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Log Output" Click="ButtonLogView_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageLog}"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Project Explorer" Click="ButtonExplorerView_Click" Template="{DynamicResource MenuItemBlackInside}">
          <MenuItem.Icon>
            <Image Source="{StaticResource ImageExplorer}"/>
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>
    </Menu>
    



    <ad:DockingManager Grid.Row="1" x:Name="dockingManager">
      <ad:DockingManager.Theme>
        <adcustom:BlackTheme/>
      </ad:DockingManager.Theme>

      <ad:LayoutRoot>
         
        <ad:LayoutPanel Orientation="Horizontal">
          <ad:LayoutAnchorablePane x:Name="dockLeft" DockWidth="300"/>
          <ad:LayoutPanel Orientation="Vertical">
            <ad:LayoutPanel Orientation="Horizontal">
              <ad:LayoutDocumentPane x:Name="dockMain"/>
              <ad:LayoutAnchorablePane x:Name="dockRight" DockWidth="300"/>
            </ad:LayoutPanel>
            <ad:LayoutAnchorablePane x:Name="dockBottom" DockHeight="150"/>
          </ad:LayoutPanel>
        </ad:LayoutPanel>


        <ad:LayoutRoot.LeftSide>
          <ad:LayoutAnchorSide>
            <ad:LayoutAnchorGroup x:Name="dockLefHidden">
              <ad:LayoutAnchorable Title="Autohidden Content">
                <TextBox/>
              </ad:LayoutAnchorable>
            </ad:LayoutAnchorGroup>
          </ad:LayoutAnchorSide>
        </ad:LayoutRoot.LeftSide>

      </ad:LayoutRoot>



    </ad:DockingManager>

  </Grid>


</Window>
