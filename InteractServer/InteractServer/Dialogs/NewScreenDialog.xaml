<Window x:Class="InteractServer.Dialogs.NewScreenDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InteractServer.Dialogs"
      mc:Ignorable="d" d:DesignWidth="300"
      Title="Add a new Screen" Height="306.234" Width="300">

    <Grid>
        <Label Content="Select a Screen Type" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBType" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="265"/>
        <Label Content="Screen Name" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TBScreenName" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" TextChanged="TBScreenName_TextChanged"/>
        <Button x:Name="BContinue" Content="Continue" HorizontalAlignment="Left" Margin="207,243,0,0" VerticalAlignment="Top" Width="75" Click="BContinue_Click"/>
        <Label x:Name="LFileExists"  Content="This name is in use" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Foreground="RED"/>
    </Grid>
</Window>
