<Window x:Class="InteractServer.Dialogs.RenameResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractServer.Dialogs"
        mc:Ignorable="d"
        Title="Rename Resource" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="TBResourceName" Text="Resource Name" HorizontalAlignment="Stretch"  Margin="10,10,10,0" TextChanged="TBResourceName_TextChanged"/>
        <CheckBox Grid.Row="1" x:Name="CBRename" Margin="10" Click="CBRename_Click" Visibility="Hidden">
            <TextBlock Text="Also rename this resource where used."/>
        </CheckBox>
        <Button Grid.Row="2" x:Name="BRename" Content="Rename" Margin="10" Click="BRename_Click"/>
    </Grid>
</Window>
