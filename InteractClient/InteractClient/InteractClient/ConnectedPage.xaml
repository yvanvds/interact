<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InteractClient.ConnectedPage"
             BackgroundColor="DarkSlateGray">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <Image Grid.Row="1" x:Name="Logo" Source="connect.png" HorizontalOptions="Center"/>
    <Label Grid.Row="2" Text="Interact" FontSize="40" TextColor="White" HorizontalTextAlignment="Center">
      <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String" iOS="Georgia" Android="serif"/>
      </Label.FontFamily>
    </Label>
    <Label Grid.Row="3" x:Name="ActivityText" Text="" FontFamily="serif" FontSize="Small" TextColor="White" HorizontalTextAlignment="Center">
      <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String" iOS="Georgia" Android="serif"/>
      </Label.FontFamily>
    </Label>

    <Button Grid.Row="5" x:Name="DisconnectButton" Text="Disconnect" Clicked="DisconnectButton_Clicked" BackgroundColor="LightSlateGray" TextColor="White" BorderRadius="5"/>
    </Grid>

</ContentPage>